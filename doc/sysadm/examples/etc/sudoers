# /etc/sudoers
#
# This file MUST be edited with the 'visudo' command as root.
#
# See the man page for details on how to write a sudoers file.
#

Defaults	env_reset

# Host alias specification

# User alias specification

# Cmnd alias specification
Cmnd_Alias      ONBOARD = /sbin/ip, /sbin/dhcpcd, /usr/sbin/brctl, /sbin/iptables, /sbin/iptables-save, /sbin/iptables-restore, /sbin/ip6tables, /sbin/ip6tables-save, /sbin/ip6tables-restore,  /bin/kill, /bin/killall, /bin/readlink, /bin/cat /proc/*/environ
Cmnd_Alias      ONBOARD_SETENV = /etc/init.d/dnsmasq
 

# User privilege specification
root	ALL=(ALL) ALL

# Uncomment to allow members of group sudo to not need a password
# (Note that later entries override this, so you might need to move
# it further down)
# %sudo ALL=NOPASSWD: ALL

%onboard ALL = NOPASSWD: ONBOARD 
%onboard ALL = SETENV: NOPASSWD: ONBOARD_SETENV 
	# vim doesn't understand this syntax (multiple tags)
