<h2>QEMU</h2>

<h3>Create VM</h3>

<form method="POST">
  <table>
    <thead>
    </thead>
    <tbody>
      <tr>
        <th scope="row">Disk Image</th>
        <td>
          <!-- <input type="hidden" name="drive[]" value=""/> -->
          <input type="text" name="drive[][file]"/> 
        </td>
      </tr>
      <tr>
        <th scope="row">VNC Display</th>
        <td>
          <select name="vnc">
            <% 1.upto(31) do |n| %>
              <option value=":#{n}">:<%= n %></option>
            <% end %>
          </select>
        </td>
      </tr>
    </tbody>
  </table>
  <button type="submit">Create!</button>
</form>
