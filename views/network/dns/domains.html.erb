<%
  add_domains = 1
  if params['add_domains'].respond_to? :to_i 
    if params['add_domains'].to_i > 0
      add_domains = params['add_domains'].to_i
    end
  end
%>

<style type="text/css">
  input[name="domain[]"] {
    width: 36ex;
  }
</style>

<h2 style="margin-bottom:0;"><%= title %></h2>
<p style="margin-top:0; padding-top:0;" class="optinfo">Based on 
<a href="http://www.thekelleys.org.uk/dnsmasq/doc.html">Dnsmasq</a>.</p>

  <%=
    erb(
      :"/_messages.html",
      {
        :layout => false,
        :locals => {
          :msg => msg,
          :status => status
        }
      }
    )
  %>

<form method="POST" action="<%= request.path_info %>">
  <input type="hidden" name="_method" value="put"/>
  <h3>Domains</h3>
  <table>
    <thead>
      <tr>
        <th>Domain</th>
        <th>IP address</th>
        <th>Block?</th>
      </tr>
    </thead>
    <tbody>
      <% objects.data['conf']['dns']['domains'].each_pair do |name, ips| %>
        <% ips.each do |ip| %>
          <tr>
            <td>
              <input type="text" name="domain[]" value="<%= name %>"/>
            </td>
            <td>
              <input type="text" name="ip[]" value="<%= ip %>"/>
            </td>
            <td style="text-align:center;">
              <input type="checkbox" name="block[]" <%= 'checked' if objects.blocked?(name) %>/>
            </td>
          </tr>
        <% end %>
      <% end %>
      <% add_domains.times do %>
        <tr>
          <td><input type="text" name="domain[]"/></td>
          <td><input type="text" name="ip[]"/></td>
          <td style="text-align:center;">x</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="optional" style="margin: 0.75ex 1ex;">
    <a href="?add_domains=<%= add_domains * 2 %>">
      Add more domains
    </a>       
  </div>

  <h3> &nbsp; <!-- Commit changes --></h3>
  <button type="submit">Change</button>
</form>
