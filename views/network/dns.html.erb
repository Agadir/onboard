<h2 style="margin-bottom:0;">DNS</h2>
<p style="margin-top:0; padding-top:0;" class="optinfo">Based on 
<a href="http://www.thekelleys.org.uk/dnsmasq/doc.html">Dnsmasq</a>.</p>

  <%=
    erubis(
      :"/_messages.html",
      {
        :layout => false,
        :locals => {
          :msg => msg,
          :status => status
        }
      }
    )
  %>

