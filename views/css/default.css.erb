<% 
  superhighlight  = "#080"
  highlight       = "#44b" 
  lowlight        = "#777" 
  superlowlight   = "#bbb" 
  hover           = "color: white; background: #{highlight};" 
  lightbg         = "#faf4d0" 
  serif           = %q{"Times New Roman", Times, Georgia, serif}
  sans_serif      = %q{Arial, Helvetica, sans-serif}
%>

body {
  overflow: auto;
  font-size: 10pt;
  font-family: <%= sans_serif %>;
}

.highlight{
  color: <%= highlight %>
}

.superhighlight{
  color: <%= superhighlight %>
}

.lowlight{
  color: <%= lowlight %>
}

div#sidebar {
	border-right: 1px gray solid;
	float:left;
  width: 17%;
  height: 80%;
  margin: 1em 1em 0 0;
  padding-right: 0.5em;
  font-size: 85%;
  overflow: auto;
  color: #444;
}

div#sidebar ul {
  padding: 2px 1em;
  margin: 0.2em 0;
}

div#onboard-menu {
  padding-top: 2px;
}

div#navbar {
  font-size: 93%;
  /* font-family: <%= serif %>; */
  font-style: italic;
  margin-top: 0.3em;
}

div#main {
  border: 0;
	float: right;
	width: 80%;	
	padding: 2px;
  margin: 1em 1px;
}

h2{
  font-size: 135%;
}

form {
  padding: 0;
  margin: 0;
}

div#main input.rotext, div#main input.rwtext {
  font-family: monospace;
  /* font-size: 130%; */
}

div#main input[type="text"][readonly] {
  background: transparent;
  color: <%= lowlight %>;
}

div#main input.rwtext {
  color: <%= highlight %>;
  background: white;
}

div#main input.rotext {
  color: <%= lowlight %>;
  background: <%= lightbg %>;
}

textarea {
  color: <%= highlight %>;
  font-family: monospace;
}

input[type="radio"] {
  vertical-align: middle; 
}

.product-name, em {
  font-style: italic;
  margin-right: 0.3ex;
}

div#main div.error, div#main div.warn, div#main div.info, div#main pre.error, div#main pre.warn, div#main pre.info div#main p.error, div#main p.warn, div#main p.info { 
  color: black;
  padding: 0.3em 0.3em;
  margin-bottom: 1em;
}

div#main .error pre, div#main .warn pre, div#main .info pre {
  color: black;
  margin-bottom: 0;
}

div#main div.error, div#main div.warn, div#main div.info {
  margin-right: 4em;
}

div#navbar .error, div#navbar .warn, div#navbar .info {
  margin-right: 0.15em;
  padding: 0 3px;
}

.error  {border: 1px red dashed;}
.warn   {border: 1px yellow dashed; font-style: italic; font-size:105%;}
.info   {border: 1px #4b0 dotted;}

.optinfo {
  text-align:   left;
  font-weight:  normal;
  font-style:   italic;
}

strong {
  font-size: 107%;
}

div#main p {
	margin-top: 0.3em;
}

div#main pre {
  /* font-size: 11pt; */
  color: <%= highlight %>;
}

div#main pre.framed {
  border: 1px <%= highlight %> solid;
}

pre.log {
  margin: 2em 0;
  width: 95%;
  height: 17em; 
  border: 2px <%= lightbg %> solid;
}

pre {
  overflow: auto;
}

a, .hmenu-bullet {
  color: <%= highlight %>;
  text-decoration: none;
}

a {
  font-weight: bold;
}

.hmenu-bullet {
  font-weight: normal;
}

a:hover   {
  color: white; 
  background: <%= highlight %>; 
} 

.hmenu-bullet:hover  {
  color: <%= superhighlight %>;
}

.hmenu-content {
  padding: 0 0.3em;
}

.menu-content a {
  padding-left: 0;
  padding-right: 0;
  margin-left: 0;
  padding-right: 0;
}

span.hmenu-selected {
  font-weight: bold;
  /* color: white; */
  /* background: <%= superhighlight %>; */
  border: 1px <%= superhighlight %> solid;
}

ul.hmenu li, ul.hmenu-submenu li {
  padding: 0 0.2em;
}

span.hmenu-root {
  font-weight: bold;
  border: none;
}

a.img, a.img:hover, a img  {
  border: none;
  background: transparent;
}

.superhighlight a {
  color: <%= superhighlight %>;
}

.superhighlight a:hover {
  color: white;
  background: <%= superhighlight %>;
}

table {
  font-size: 90%;
}

table tr th {
  border:0; 
  text-align: center;
  padding: 0 1em;
}

table tr th, fieldset {
  font-size:80%;
  font-weight: bold;
  background: <%= lightbg %>;
}

fieldset {
  border: none;
  display: inline;
}

table tr th small {
  font-weight: normal;
  margin-left: 0.6em;
  padding: 0;
}

table tr th[scope="row"] {
  text-align: left;
}

table tr td {
  border: 0;
  background: <%= lightbg %>;
  padding: 0 0.4em;
}

table tr td ul, table tr th ul {
  margin: 0.3em 0 0 0;
  padding: 0 0 0 1.15em;
}

table tr td button {
  padding: 1px;
}

table tr td button img {
  vertical-align: middle;
  margin: 0;
}

table tr td div {
  margin: 0.3em 0;
}

button[disabled] {
  background: transparent;
  border: 1px <%= superlowlight %> solid;
}

button[disabled] img { /* CSS3 */ 
  opacity:0.4; /* Firefox */
  filter:alpha(opacity=40); /* MSIE */
}

ul li ul li .hmenu-content  {
  font-size: 97%;
} 

div#sidebar ul {
  font-weight: bold;
}

li {
  margin: 6pt 0;
} 

select.tt, select option.tt {
  font-family: monospace;
}
